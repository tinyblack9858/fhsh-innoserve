{
    "name": "teacher-control-app",
    "version": "1.0.0",
    "description": "A network monitoring tool for teachers.",
    "main": "src/main.js",
    "scripts": {
      "start": "electron .",
      "build-python": "pyinstaller --onefile --noconsole --distpath ./dist_py ./python/backend_controller.py",
      "dist": "npm run build-python && electron-builder"
    },
    "devDependencies": {
      "electron": "^28.2.0",
      "electron-builder": "^24.9.1"
    },
    "build": {
      "appId": "com.teacher.controlapp",
      "win": {
        "target": "nsis",
        "requestedExecutionLevel": "requireAdministrator"
      },
      "extraResources": [
        {
          "from": "./dist_py/",
          "to": "python_dist",
          "filter": [
            "**/*"
          ]
        }
      ]
    }
  }